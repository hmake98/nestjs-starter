{
    "$schema": "https://swc.rs/schema.json",
    "sourceMaps": true,
    "module": {
        "type": "commonjs"
    },
    "jsc": {
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"]
        },
        "target": "esnext",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        }
    },
    "minify": false,
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "templates",
        "src/metadata.ts"
    ]
}

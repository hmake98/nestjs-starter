{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "builder": {
            "type": "swc",
            "options": {
                "swcrcPath": ".swcrc"
            }
        },
        "deleteOutDir": true,
        "plugins": ["@nestjs/swagger"],
        "assets": [
            {
                "include": "languages/**/*",
                "watchAssets": true
            }
        ]
    }
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String?
  first_name  String?
  last_name   String?
  is_verified Boolean   @default(false)
  phone       String?
  role        Roles     @default(USER)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?
  is_deleted  Boolean?
  avatar      Files?    @relation(fields: [avatar_id], references: [id])
  posts       Posts[]
  avatar_id   String?
}

model Files {
  id         String    @id @default(uuid())
  file_name  String
  link       String
  type       String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?
  is_deleted Boolean?
  users      Users[]
  post       Posts?    @relation(fields: [post_id], references: [id])
  post_id    String?
}

model Posts {
  id         String    @id @default(uuid())
  title      String
  content    String
  photos     Files[]
  author     Users     @relation(fields: [author_id], references: [id])
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?
  is_deleted Boolean?
  author_id  String
}

enum Roles {
  USER
  ADMIN
}
